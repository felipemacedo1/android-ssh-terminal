root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin and Java files
[*.{kt,java}]
indent_style = space
indent_size = 4
max_line_length = 120

# JSON, XML, Gradle
[*.{json,xml,gradle,kts}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
